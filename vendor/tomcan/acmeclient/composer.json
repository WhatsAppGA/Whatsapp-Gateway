    "tomcan",
    "LE",
    "letsencrypt",
    "acme",
    "acmev2",
    "rfc8555"
  ],
  "homepage": "https://github.com/tomcan/acmeclient",
  "license": "Apache-2.0",
  "authors": [
    {
      "name": "Tom Cannaerts",
      "homepage": "https://tom.be"
    }
  ],
  "autoload": {
    "psr-4": {
      "TomCan\\AcmeClient\\": "./src"
    }
